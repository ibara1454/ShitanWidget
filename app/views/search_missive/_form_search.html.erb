<%= form_for @missive_filter, :url => {:action => "search"}, :html => {:class => "well form-horizontal", :role => "form"}, :builder => BootstrapFormBulder, :method => 'GET' do |f| %>
    <%= field_set_tag t(".title") do %>
        <div class="form-group">
            <%= f.label :date, :class => "col-lg-2 control-label" %>
            <div class="col-lg-4"><%= f.datepicker :date_begin, {:class => "form-control"} %></div>
            <div class="col-lg-1"><%= content_tag :span, t(".date.begin") %></div>
            <div class="col-lg-4"><%= f.datepicker :date_end, {:class => "form-control"} %></div>
            <div class="col-lg-1"><%= content_tag :span, t(".date.end") %></div>
        </div>
        <div class="form-group">
            <%= f.label :doc_type, :class => "col-lg-2 control-label" %>
            <div class="col-lg-4"><%= f.collection_select(:doc_type, @doc_type, :id, :name, {:include_blank => true}, {:class => "form-control"}) %></div>
        </div>
        <div class="form-group">
            <%= f.label :agency, :class => "col-lg-2 control-label" %>
            <div class="col-lg-5"><%= f.text_field :agency, {:class => "form-control"} %></div>
        </div>
        <div class="form-group">
            <%= f.label :initial, :class => "col-lg-2 control-label" %>
            <div class="col-lg-5"><%= f.text_field :initial, {:class => "form-control"} %></div>
        </div>
        <div class="form-group">
            <%= f.label :reference_no, :class => "col-lg-2 control-label" %>
            <div class="col-lg-5"><%= f.text_field :reference_no, {:class => "form-control"} %></div>
        </div>
        <div class="form-group">
            <%= f.label :subject, :class => "col-lg-2 control-label" %>
            <div class="col-lg-8"><%= f.text_field :subject, {:class => "form-control"} %></div>
        </div>
        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10"><%= f.submit %></div>
        </div>
    <% end %>
<% end %>
<%= form_for @missive_filter, :url => {:action => "search"}, :html => {:class => "well form-horizontal", :role => "form"}, :builder => BootstrapFormBulder, :remote => true, :method => :post do |f| %>
    <%= field_set_tag t(".title") do %>
        <div class="form-group">
            <%= f.label :date %>
            <%= f.datepicker :date_begin %>
            <%= content_tag :span, t(".date.begin"), :class => "help-inline" %>
            <%= f.datepicker :date_end %>
            <%= content_tag :span, t(".date.end"), :class => "help-inline" %>
        </div>
        <div class="form-group">
            <%= f.label :doc_type %>
            <%= f.collection_select(:doc_type, @doc_type, :id, :name, :include_blank => true) %>
        </div>
        <div class="form-group">
            <%= f.label :agency %>
            <%= f.text_field :agency %>
        </div>
        <div class="form-group">
            <%= f.label :initial %>
            <%= f.text_field :initial %>
        </div>
        <div class="form-group">
            <%= f.label :reference_no %>
            <%= f.text_field :reference_no %>
        </div>
        <div class="form-group">
            <%= f.label :subject %>
            <%= f.text_field :subject, :class => "span5" %>
        </div>
        <div class="form-actions">
            <%= f.submit %>
        </div>
    <% end %>
<% end %>
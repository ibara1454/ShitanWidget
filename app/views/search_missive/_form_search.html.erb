<%= button_tag raw('&times;'), :class => 'close' %>


<%= form_for @missive_filter, :url => {:action => "search"}, :html => {:class => "well form-horizontal", :role => "form"}, :builder => BootstrapFormBulder do |f| %>
    <%= field_set_tag "Search Missive" do %>
        <div class="form-group">
            <%= f.label :date %>
            <%= f.datepicker :date_begin %>
            <span class="help-inline">Begin</span>
            <%= f.datepicker :date_end %>
            <span class="help-inline">End</span>
        </div>
        <div class="form-group">
            <%= f.label :doc_type %>
            <%= f.text_field :doc_type, :class => "input-block-level" %>
        </div>
        <div class="form-group">
            <%= f.label :agency %>
            <%= f.text_field :agency, :class => "input-block-level" %>
        </div>
        <div class="form-group">
            <%= f.label :reference_no %>
            <%= f.text_field :reference_no, :class => "input-block-level" %>
        </div>
        <div class="form-group">
            <%= f.label :subject %>
            <%= f.text_field :subject, :class => "input-block-level" %>
        </div>
        <div class="form-group">
            <%= f.label :submit %>
            <%= f.submit %>
        </div>
    <% end %>
<% end %>